block head
    style.
        header{position:relative!important;height:50px!important;background-color:#343333;width:calc(100vw - 14px)!important}header .logo{padding:0 0 4px 50px !important}header .menu{align-items:center!important;padding:0 60px!important}header .menu ul{padding:0!important}.contactMe{width:60%;text-align:left;margin:auto;margin-top:4%}.contactMe h2{margin:4%;font-style:normal;line-height:67px;text-align:center;margin-bottom:16px;font-size:2.3em;font-weight:400;text-transform:uppercase}.contactMe p{text-align:left;margin:auto;font-family:proxima-nova;font-size:1.2em;font-weight:400;font-style:normal;letter-spacing:1px;line-height:1.6em}.contact_form{width:60%;margin:auto;display:flex;flex-direction:column}.contact_form .infoFields label,.contact_form .messageField label{color:#363636;font-style:normal;font-weight:400;font-size:16px;font-family:proxima-nova}.contact_form > div{display:flex;flex-direction:row}.contact_form > div .infoFields{width:calc(max-content + 50px);margin-right:15%}.contact_form > div .infoFields > div{margin-top:16px}.contact_form > div .infoFields input,.contact_form > div .infoFields select{width:100%;padding:12px;margin:6px 0 4px;border:1px solid #ccc;background:#fafafa;color:#000;font-family:sans-serif;font-size:12px;line-height:normal;border-radius:2px}.contact_form > div .infoFields input:focus,.contact_form > div .infoFields select:focus{outline:none;background-color:#fff}.contact_form > div .infoFields select{width:calc(100% + 24px)!important}.contact_form > div .infoFields > div > div label{color:#363636;font-style:normal;font-weight:400;font-size:14px;font-family:proxima-nova}.contact_form > div .infoFields .name > div,.contact_form > div .infoFields .money > div{display:flex;flex-direction:row;justify-content:space-between}.contact_form > div .infoFields .name > div > div,.contact_form > div .infoFields .money > div > div{display:static;width:calc(50% - 14px)}.contact_form > div .infoFields .phone .phone__field{position:relative;width: