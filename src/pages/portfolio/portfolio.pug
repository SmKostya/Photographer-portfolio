cursor:pointer;padding:1.2vw 1.2vw 0 0;width:calc((93vw - 220px - 3.6vw)/3.185185185);height:calc(((93vw - 220px - 3.6vw)/3.185185185) / 1.5)}.allCategories .categori img:nth-child(3n+1){padding-right:0!important}.allCategories .categori img:nth-child(100n+2),.allCategories .categori img:nth-child(100n+6),.allCategories .categori img:nth-child(100n+10){width:calc((93vw - 220px - 3.6vw)/3.185185185 * 1.185185185)!important;height:calc(((93vw - 220px - 3.6vw)/3.185185185) / 1.5)}.back{border:1px #fff solid;display:flex;flex-direction:row;justify-content:space-between;height:36px;background-color:#4e5566;text-align:center}.back > div{cursor:pointer;color:#fff;margin:auto;padding:8px 16px;border:1px solid #fff;height:100%;width:33.33333%;display:flex}.back > div span{margin:auto}.back > div:hover{background-color:#323f61}



block main

    - var type_list = ["Свадебные", "Портретные", "Студийные", "История любви", "Прогулочные", "Будуарные", "Черно-Белые", "Творческие", "Репортажные", "Пейзажные", "Вечеринки", "Эксперементы"]
    - var id_list = ["wedding", "portrait", "studio", "loveStorie", "walking", "boudoir","black_and_white", "creative", "reporting", "landscape", "parties", "experiments"]
    .content    
        .filter
            ul 
                li Виды фотосессий
                li Выбрать все 
                    input(type="checkbox" id="all_types" checked="checked")
                    label(for="all_types")
                    - for (var i = 0; i < 12; i++)
                        li= type_list[i]
                            input(type="checkbox" id=id_list[i] checked="checked")
                            label(for= id_list[i])

        .allCategories
            mixin categorie(name, id)
                - for (var k = 1; k < 2; k++)
                    .categori(class= id[k])
                        h2= name[k]
                        - for (let l = 1; l < 10; l++)
                            img(src= "/img/types/"+ id[k] + "/" + l +".jpg" alt= id[k])
                - for (var i = 1; i < 12; i++)
                    .categori(class= id[i])
                        h2= name[i]
                        - for (let j = 1; j < 10; j++)
                            img.lazy(data-src= "/img/types/"+ id[i] + "/" + j +".jpg" alt= id[i])


            +categorie(type_list, id_list) 


